<div class="container">
  <div class="row">
    <div class="col-md-3">
       <%= render 'users/userinfo', user: @user %>
       <%= render 'booknew', book: @bookshow %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(100, 100) %><br>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @user == current_user %>
                <p><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_3205" %></p>
              <% end %>
            </td>
            <td>
              <% if @user == current_user %>
              <p><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger destroy_book_3205" %></p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
